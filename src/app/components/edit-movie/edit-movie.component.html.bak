<div class="container wrapper wrapper2">
    <div class="row">
        <!-- Form -->
        <div class="col-md-12">
            <h3>Editar</h3>
            <form [formGroup]="updateMovieForm" (ngSubmit)="submitForm()" novalidate>
                <div class="form-group">
                    <label>Nome</label>
                    <input type="text" formControlName="nome" class="form-control" maxlength="20">
                </div>
                <div class="form-group">
                    <label>Sinopse</label>
                    <textarea class="form-control" formControlName="sinopse" rows="3" maxlength="50"></textarea>
                </div>
                <div class="form-group">
                    <label>Ano</label>
                    <input type="text" formControlName="ano" class="form-control" maxlength="20">
                </div>
                <div class="form-group">
                    <label>Rank</label>
                    <input type="text" formControlName="rank" class="form-control" maxlength="20">
                </div>
                <button type="submit" class="btn btn-primary">Update</button>
            </form>
        </div>
    </div>
</div>